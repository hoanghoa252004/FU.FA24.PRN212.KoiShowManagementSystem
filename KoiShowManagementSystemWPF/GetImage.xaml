<Window x:Class="KoiShowManagementSystemWPF.GetImage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KoiShowManagementSystemWPF"
        mc:Ignorable="d"
        Title="GetImage" Height="450" Width="800">
    <Grid>
        <Button Content="Load Image" Width="100" Height="30" 
            HorizontalAlignment="Left" Margin="20" 
            Click="LoadImage_Click" />

        <Image x:Name="imagePreview" Width="300" Height="300" 
           HorizontalAlignment="Left" Margin="20,70,0,0"
           Stretch="Uniform" />

        <TextBlock x:Name="statusText" HorizontalAlignment="Left" Margin="20,350,0,0" Foreground="Red"/>
    </Grid>
</Window>
